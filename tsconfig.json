{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "types": [
            "vue"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "jsx": "preserve",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}